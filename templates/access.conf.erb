# allow only the groups listed
<%
entries = scope.lookupvar('pam::allowed_users')    
-%>
<% entries.each do |entry| -%>
<%if entry.is_a? Hash -%>
<% entry.sort.each do |key, value| -%>
<% if value.is_a? String -%>
+ : <%= key %> : <%= value %>
<% elsif value.is_a? Array -%>
+ : <%= key %> : <%= value.join(' ') %>
<% end -%>
<% end -%>
<% elsif entry.is_a? String -%>
+ : <%= entry %> : ALL
<% end -%>
<% end -%>

# default deny
- : ALL : ALL
